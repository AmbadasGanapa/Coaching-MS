<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <welcome-file-list>
        <welcome-file>DashBoard.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>MarkAttendanceServlet</servlet-name>
        <servlet-class>MarkAttendanceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAttendanceServlet</servlet-name>
        <servlet-class>ViewAttendanceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getDetails</servlet-name>
        <servlet-class>getDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MarkAttendanceServlet</servlet-name>
        <url-pattern>/MarkAttendanceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAttendanceServlet</servlet-name>
        <url-pattern>/ViewAttendanceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getDetails</servlet-name>
        <url-pattern>/getDetails</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
